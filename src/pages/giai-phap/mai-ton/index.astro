---
import Layout from "../../../layouts/Layout.astro";
import CTA from "../../../components/home/cta.astro";
import { Image } from 'astro:assets';

const pageContent = {
  title: "Gói sản phẩm",
  subtitle: "Giải pháp SoLarMax",
  heading: "Giải pháp thi công mái tôn",
  description: "SLM - MR được thiết kế đặc biệt cho hệ mái tôn sóng hình thang, phần mái liên kết trực tiếp với xà gồ thông qua vít tự khoan, tạo độ vững chắc cho cả hệ khung. Với mỗi loại xà gồ khác nhau, SolarMax sử dụng loại vít tự khoan phù hợp, mang lại sự thuận tiện, tiết kiệm và an toàn trong thi công."
};

const steps = [
  {
    title: "Bước 1: Lắp chân nhôm L vào mái tôn",
    img: "/images/giai-phap-mai-ton_00001.png",
  },
  {
    title: "Bước 2: Lắp rail nhôm đỡ pin",
    img: "/images/giai-phap-mai-ton_00002.png",
  },
  {
    title: "Bước 3: Lắp các tấm pin",
    img: "/images/giai-phap-mai-ton_00003.png",
  }
];

const sampleImages = [
    {
        src: "/images/anh-thuc-te-giai-phap-mai-ton-00001.JPG",
        alt: "Lắp đặt điện mặt trời mái tôn cho nhà xưởng",
    },
    {
      src: "/images/anh-thuc-te-giai-phap-mai-ton-00002.JPG",
      alt: "Hệ thống điện mặt trời mái tôn công nghiệp",
    },
    {
      src: "/images/anh-thuc-te-giai-phap-mai-ton-00003.JPG",
      alt: "Thi công điện mặt trời mái tôn nhà máy",
    },
    {
      src: "/images/anh-thuc-te-giai-phap-mai-ton-00004.JPG",
      alt: "Lắp đặt pin năng lượng mặt trời mái tôn",
    },
    {
      src: "/images/anh-thuc-te-giai-phap-mai-ton-00005.JPG",
      alt: "Hệ thống năng lượng mặt trời mái tôn",
    },
    {
      src: "/images/anh-thuc-te-giai-phap-mai-ton-00006.JPG",
      alt: "Giải pháp điện mặt trời mái tôn",
    }
];
---

<Layout title="Gói sản phẩm">
    <header class="header-section">
        <div class="relative isolate overflow-hidden pt-14">
            <Image 
              src="https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=1920"
              alt="Mái tôn lắp điện mặt trời"
              width={1920}
              height={1080}
              class="absolute inset-0 -z-10 size-full object-cover"
            />
            <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden  sm:-top-80" aria-hidden="true">
              <div class="relative left-[calc(50%-11rem)] aspect-1155/678 w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
            </div>
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
              <div class="mx-auto py-16 sm:py-48 lg:py-32">
                <div class="sm:mb-8 flex sm:justify-start">
                  <div class="absolute inset-0 bg-black/40 flex items-center justify-start">
                    <div class="text-white text-left max-w-7xl mx-auto w-full px-4">
                      <span class="text-xl mx-auto font-semibold tracking-tight text-balance text-white sm:text-4xl">Giải pháp thi công Solarmax</span>
                      <div class="mt-8">
                        <a href="https://zalo.me/0964920242" target="_blank" class="rounded-md bg-red-600 px-6 py-3 text-lg font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">
                          Liên hệ tư vấn
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            </div>
            <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
              <div class="relative left-[calc(50%+3rem)] aspect-1155/678 w-[36.125rem] -translate-x-1/2 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
            </div>
      </header>
    <div class="overflow-hidden bg-white py-8 sm:py-16">
        <div class="mx-auto max-w-7xl px-4 md:px-6 lg:px-8">
            <div class="flex relative flex-col lg:h-[950px] lg:flex-row gap-x-8 gap-y-8 sm:gap-y-20 lg:items-start">
                <div class="px-0 lg:px-0 lg:pt-2 lg:pr-4 w-full lg:w-1/3 z-10">
                    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
                        <p class="text-base/7 font-semibold text-green-600">{pageContent.subtitle}</p>
                        <h1 class="mt-2 text-4xl font-semibold tracking-tight text-gray-900 sm:text-3xl">{pageContent.heading}</h1>
                        <p class="mt-2 text-base/7 text-gray-600">{pageContent.description}</p>
                    </div>
                </div>
                
                <div class="relative lg:absolute lg:top-0 lg:right-0 sm:px-6 lg:px-0 my-auto w-full lg:w-2/3">
                    <div class="mx-auto max-w-2xl sm:mx-0 sm:max-w-none">
                        <Image 
                            src="/images/giai-phap-mai-ton_main.png"
                            alt="Giải pháp thi công mái tôn"
                            width={800}
                            height={600}
                            class="w-full rounded-md h-auto"
                        />
                    </div>
                </div>

                <div class="relative lg:absolute lg:bottom-0 flex flex-col lg:flex-row gap-4 items-start lg:items-end justify-between mt-5 w-full space-y-4 text-base/7 text-gray-600 lg:max-w-none z-20">
                    {steps.map((step) => (
                        <div class="relative flex flex-col gap-0 w-full lg:w-1/3 backdrop-blur-sm bg-white/30 border border-white/20 shadow-lg rounded-lg p-4">
                            <dt class="font-bold text-gray-900">
                                <div class="flex items-center gap-2">
                                    <svg viewBox="0 0 4 4" class="size-1 text-green-600" aria-hidden="true">
                                        <circle cx="2" cy="2" r="2" fill="currentColor" />
                                    </svg>
                                    {step.title}
                                </div>
                            </dt>
                            <dd class="mt-4">
                                <Image 
                                    src={step.img}
                                    alt={step.title}
                                    width={400}
                                    height={300}
                                    class="w-full rounded-md h-auto"
                                />
                            </dd>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white py-8 sm:py-16">
        <div class="mx-auto max-w-7xl px-4 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Hình ảnh thực tế</h2>
                <p class="mt-2 text-lg leading-8 text-gray-600">Một số hình ảnh thực tế về lắp đặt điện mặt trời mái tôn</p>
            </div>
            <div class="mx-auto mt-8 sm:mt-16 grid max-w-2xl grid-cols-1 gap-4 sm:gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {sampleImages.map((image) => (
                    <div class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-48 sm:pt-24 lg:pt-48">
                        <Image 
                            src={image.src}
                            alt={image.alt}
                            width={600}
                            height={400}
                            class="absolute inset-0 -z-10 h-full w-full object-cover"
                        />
                    </div>
                ))}
            </div>
        </div>
    </div>
    <CTA />
</Layout>
